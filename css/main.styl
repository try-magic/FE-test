@import "normalize";
$primary-width = 1100px;

@font-face {
    font-family: 'League Gothic';
    src: url('../font/leaguegothic-regular-webfont.eot');
    src: url('../font/leaguegothic-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('../font/leaguegothic-regular-webfont.woff') format('woff'),
         url('../font/leaguegothic-regular-webfont.ttf') format('truetype'),
         url('../font/leaguegothic-regular-webfont.svg#league_gothicregular') format('svg');
    font-weight: normal;
    font-style: normal;

}

clearfix() {
  &:before,
  &:after {
    content: " "; // 1
    display: table; // 2
  }
  &:after {
    clear: both;
  }
}
.container {
	position:relative;
	width:$primary-width;
	margin:0px auto;
	clearfix();
}
.pull-right {
	float:right;
}
.pull-left {
	float:left;
}
html {
	height:100%;
	color:#333;
	body {
		position:relative;
		min-height:100%;
		height:auto;
		background-color:#fff;
		border-left:2px solid #000;
		ul {
			list-style:none;
		}
		a {
			text-decoration:none;
		}
	}
}
.top-line {
	position:relative;
	background-color:rgba(0,75,142,.7);
	/*filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#70004B8E', 
            endColorstr='#70004B8E',GradientType=0);*/
	height:44px;
	line-height:44px;
	margin-left: -2px;
	color:#fff;
	font-size:13px;
	font-family: 'Open Sans', sans-serif;
	z-index:1;
	.btn-info,
	.btn-menu {
		display:none;
	}
	.logo {
		display:block;
		width:103px;
		height:44px;
		background: url(../images/logo.png) 0px center no-repeat;
	}
	.top-menu {
		float:right;
		li {
			float:left;
			padding:0px 10px;
			a {
				color:inherit;
				text-transform:uppercase;
			}
		}
	}
	.account {
		font-weight:300;
		li {
			float:left;
			padding:0px 15px 0px 25px;
			&.search {
				&:before {
					content:'';
					position:relative;
					width:17px;
					height:16px;
					top: -1px;
					display: inline-block;
					vertical-align: middle;
					margin-left: -20px;
					background-image: url(../images/icon-search.png);
					background-position:center;
				}
				&:after {
					content:'';
					position:relative;
					height:16px;
					display: inline-block;
					vertical-align: middle;
					right: -15px;
					border-right:1px solid rgba(178,201,221,.5);
				}
				input {
					display:none;
				}
			}
			span {
				cursor:pointer;
				&:after {
					content:'';
					position:relative;
					height:0px;
					width:0px;
					display:inline-block;
					vertical-align:middle;
					margin-left:5px;
					top:2px;
					border:5px solid transparent;
					border-top-color:#fff;
				}
			}
		}
	}
}
.header {
	position:relative;
	margin-left: -2px;
	background-color: #fff;
	height:96px;
	z-index:1;
	.menu {
		clearfix();
		li {
			float:left;
			padding:0px 25px;
			height:96px;
			border-left:1px solid #bfd2e2;
			border-right:1px solid #bfd2e2;
			& + li {
				border-left:0px;
			}
			a {
				display:block;
				min-width:89px;
				&.img-logo {
					min-width:0px;
					width:50px;
					line-height:96px;
					img {
						vertical-align:middle;
					}
				}
				&.start,
				&.end,
				&.persons {
					.select-content {
						&:before {
							content:'';
							display:inline-block;
							height:30px;
							width:39px;
							vertical-align:middle;
							margin-right:5px;
							background:url(../images/sprite.png) 0px 0px no-repeat;
						}
					}
				}
				&.end .select-content:before {
					background-position:0px -30px;
				}
				&.persons .select-content:before {
					background-position:0px -60px;
				}
				&.btn-primary {
					background-color:#094798;
					border:1px solid #bfd2e2;
					margin-top:23px;
					color:#fff;
					font-size:36px;
					font-family: 'League Gothic';
					text-transform:uppercase;
					text-align:center;
					box-sizing:border-box;
				}
				span {
					display:block;
					line-height:normal;
					text-transform:uppercase;
					color:#004b8e;
					text-align:center;
					&.select-title {
						padding:8px 0px 13px;
						font-size:13px;
					}
					&.select-content {
						line-height:31px;
						font-size:36px;
						font-family: 'League Gothic';
						&:after {
							content:'';
							display:block;
							width: 0px;
							margin:15px auto 0px;
							border:5px solid transparent;
							border-top-color:#004b8e;
						}
					}
				}
			}
		}
	}
}
.slider-wrapper {
	position:relative;
	margin-top:-140px;
	.slider {
		position:relative;
		height: 660px;
		li {
			display:none;
			position:absolute;
			width:100%;
			line-height: 660px;
			&.active {
				display:block;
			}
			picture,
			img {
				position: absolute;
				width:100%;
			}
			.slide-info {
				display: inline-block;
				position: relative;
				width: 100%;
				top:63px;
				vertical-align: middle;
				line-height: normal;
				text-align: center;
				z-index: 1;
				h2 {
					margin:0px;
					color:#fff;
					font-size:69px;
					font-family: 'Open Sans Condensed', sans-serif;
					text-transform:uppercase;
				}
				p {
					width:390px;
					margin:0px auto 15px;
					color:#fff;
					font-size:16px;
					font-family: 'Open Sans', sans-serif;
				}
				.btn-warning {
					display:block;
					width:275px;
					height:50px;
					line-height:48px;
					margin:0px auto;
					background-color:#febc11;
					color:#fff;
					font-size:24px;
					font-family: 'Open Sans Condensed', sans-serif;
					text-transform:uppercase;
					&:after {
						content: '';
						display: inline-block;
						vertical-align: middle;
						width: 0px;
						margin-top: -3px;
						margin-left: 5px;
						border: 5px solid transparent;
						border-left-color: #fff;
					}
				}
			}
		}
	}
	.bullets {
		position:absolute;
		width:$primary-width;
		bottom:25px;
		left:50%;
		margin-left:-($primary-width / 2);
		text-align:right;
		letter-spacing:-3px;
		li {
			display:inline-block;
			width:10px;
			height:10px;
			margin:0px 5px;
			border-radius:50%;
			background-color:#fff;
			cursor:pointer;
			&.active {
				width:16px;
				height:16px;
				margin-bottom: -3px;
				background-color:#ffb900;
			}
		}
	}
}
@media only screen and (min-device-width : 200px) and (max-device-width : 1279px) {
	body {
		border:0px;
	}
	.container {
		width:100%;
	}
	[class^=col-] {
		position: relative;
		float:left;
		min-height: 1px;
		padding-right: 15px;
		padding-left: 15px;
		border:1px solid #e4e4e4!important;
		height:50px;
		line-height:48px;
		box-sizing:border-box;
		background-color: #fff;
	}
	.col-0 {
		display:none;
	}
	.col-1 {
		width: (100% / 12);
	}
	.col-2 {
		width: (100% / 6);
	}
	.col-3 {
		width: (100% / 4);
	}
	.col-4 {
		width: (100% / 3);
	}
	.col-5 {
		width: (100% / 12) * 5;
	}
	.col-6 {
		width: (100% / 2);
	}
	.col-7 {
		width: (100% / 12) * 7;
	}
	.col-8 {
		width: (100% / 12) * 8;
	}
	.col-9 {
		width: (100% / 12) * 9;
	}
	.col-10 {
		width: (100% / 12) * 10;
	}
	.col-11 {
		width: (100% / 12) * 11;
	}
	.col-12 {
		width: 100%;
	}
	.dropdown {
		display:none;
	}
	.top-line {
		background:#fff;
		margin-left:0px;
		height:auto;
		line-height:normal;
		clearfix();
		text-align: center;
		.btn-info {
			position:relative;
			display:inline-block;
			vertical-align:middle;
			width:38px;
			height:23px;
			line-height:15px;
			background:url(../images/m-sprite.png) 0px 0px no-repeat;
			&:after {
				content:'';
				display:inline-block;
				height:0px;
				width:0px;
				vertical-align:middle;
				margin-left:30px;
				border:4px solid transparent;
				border-bottom-color:#0e4d8c;
			}
		}
		.logo {
			width:auto;
			height:100%;
			background: url(../images/m-logo.png) center center no-repeat;
		}
		.btn-menu {
			display:inline-block;
			vertical-align:middle;
			width:22px;
			height:19px;
			background:url(../images/m-sprite.png) 0px -23px no-repeat;
		}
	}
	.header {
		height:auto;
		margin-left:0px;
		.menu {
			clearfix();
			li {
				height:50px;
				line-height:48px;
				padding:0px 15px;
				a {
					min-width:0px;
					&.start,
					&.end,
					&.persons {
						.select-content {
							line-height:48px;
							&:before {
								height:20px;
								width:29px;
								background:url(../images/m-sprite.png) 0px -44px no-repeat;
							}
						}
					}
					&.start,
					&.end {
						.select-title {
							display:none;
						}
						.select-content {
							&:after {
								display:inline-block;
								vertical-align:middle;
								width: 0px;
								margin-top:0px;
								margin-left:5px;
								border-left-color:#004b8e;
							}
						}
					}
					&.end .select-content:before {
						height:21px;
						background-position:0px -65px;
					}
					&.persons .select-content {
						line-height:normal;
						&:before {
							height:23px;
							background-position:0px -87px;
						}
					}
					&.btn-primary {
						display:block;
						margin:0px -15px;
						font-size:32px;
						border:0px;
					}
					span {
						text-transform: none;
						color:#094798;
						text-align:left;
						&.select-title {
							font-size:11px;
							padding:0px;
						}
						&.select-content {
							line-height:31px;
							font-size:20px;
							&:after {
								display:none;
							}
						}
					}
				}
			}
		}
	}
	.slider-wrapper {
		margin:0px;
		.slider {
			height:auto;
			li {
				position:relative;
				line-height:normal;
				picture,
				img {
					position:relative;
					vertical-align: top;
				}
				.slide-info {
					position: absolute;
					bottom:15px;
					top:auto;
					text-align:left;
					h2 {
						padding-left:15px;
						font-size:35px;
					}
					p {
						padding-left:13px;
						margin:0px;
						width:80%;
						color:#ffb900;
						font-weight:bold;
					}
					.btn-warning {
						display:none;
					}
				}
			}
		}
		.bullets {
			right: 14px;
			bottom: 11px;
			margin:0px;
			left:auto;
			width:auto;
			li {
				position:relative;
				float:left;
				width:7px;
				height:7px;
				&.active {
					width:13px;
					height:13px;
					top: -2.5px;
				}
			}
		}	
	}
}
@media only screen and (max-device-width : 319px) {
	[class^=col-] {
		padding:0px 5px!important;
	}
	.header .menu li a {
		&.start,
		&.end,
		&.persons {
			.select-content:before {
				margin-right:0px;
			}
		}
		&.btn-primary {
			margin:0px -5px;
			font-size:28px;
		}
		span {
			&.select-title {
				font-size:10px;
			}
			&.select-content {
				font-size:14px;
			}
		}
	}
	.slider-wrapper .slider li .slide-info h2,
	.slider-wrapper .slider li .slide-info p {
		padding-left:5px;
	}
	.slider-wrapper .slider li .slide-info h2 {
		font-size:11px;
	}
	.slider-wrapper .slider li .slide-info p {
		font-size:9px;
	}
}
@media only screen and (min-device-width : 540px) and (max-device-width : 1279px) {
	.header .menu li a {
		&.btn-primary {
			font-size:38px;
		}
		span {
			&.select-title {
				font-size:14px;
			}
			&.select-content {
				font-size:24px;
			}
		}
	}
	.slider-wrapper .slider li .slide-info h2,
	.slider-wrapper .slider li .slide-info p {
		padding-left:20px;
	}
	.slider-wrapper .slider li .slide-info p {
		font-size:20px;
	}
	.slider-wrapper .bullets li {
		width:10px;
		height:10px;
		&.active {
			width:16px;
			height:16px;
			top: -3px;
		}
	}
}