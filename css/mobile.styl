@import "normalize";
$brand-primary = #428bca;
$primary-width = 1100px;

@font-face {
    font-family: 'League Gothic';
    src: url('../font/leaguegothic-regular-webfont.eot');
    src: url('../font/leaguegothic-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('../font/leaguegothic-regular-webfont.woff') format('woff'),
         url('../font/leaguegothic-regular-webfont.ttf') format('truetype'),
         url('../font/leaguegothic-regular-webfont.svg#league_gothicregular') format('svg');
    font-weight: normal;
    font-style: normal;

}

clearfix() {
  &:before,
  &:after {
    content: " "; // 1
    display: table; // 2
  }
  &:after {
    clear: both;
  }
}
.container {
	position:relative;
	width:$primary-width;
	margin:0px auto;
	clearfix();
}
.pull-right {
	float:right;
}
.pull-left {
	float:left;
}
html {
	height:100%;
	color:#333;
	font-family: 'Open Sans', sans-serif;
	body {
		position:relative;
		min-height:100%;
		height:auto;
		background-color:#fff;
		ul {
			list-style:none;
		}
		a {
			text-decoration:none;
		}
	}
}
[class^=col-] {
	position: relative;
	float:left;
	min-height: 1px;
	padding-right: 15px;
	padding-left: 15px;
	border:1px solid #e4e4e4;
	height:50px;
	line-height:48px;
	box-sizing:border-box;
	background-color: #fff;
}
.col-1 {
	width: (100% / 12);
}
.col-2 {
	width: (100% / 6);
}
.col-3 {
	width: (100% / 4);
}
.col-4 {
	width: (100% / 3);
}
.col-5 {
	width: (100% / 12) * 5;
}
.col-6 {
	width: (100% / 2);
}
.col-7 {
	width: (100% / 12) * 7;
}
.col-8 {
	width: (100% / 12) * 8;
}
.col-9 {
	width: (100% / 12) * 9;
}
.col-10 {
	width: (100% / 12) * 10;
}
.col-11 {
	width: (100% / 12) * 11;
}
.col-12 {
	width: 100%;
}
.nav-panel {
	position:relative;
	z-index:1;
	clearfix();
	text-align: center;
	.btn-info {
		position:relative;
		display:inline-block;
		vertical-align:middle;
		width:38px;
		height:23px;
		line-height:15px;
		background:url(../images/m-sprite.png) 0px 0px no-repeat;
		&:after {
			content:'';
			display:inline-block;
			height:0px;
			width:0px;
			vertical-align:middle;
			margin-left:30px;
			border:4px solid transparent;
			border-bottom-color:#0e4d8c;
		}
	}
	.btn-logo {
		img {
			vertical-align:middle;
		}
	}
	.btn-menu {
		display:inline-block;
		vertical-align:middle;
		width:22px;
		height:19px;
		background:url(../images/m-sprite.png) 0px -23px no-repeat;
	}
}
.menu {
	clearfix();
	position:relative;
	z-index:1;
	li {
		a {
			&.start,
			&.end,
			&.persons {
				.select-content {
					line-height:48px;
					&:before {
						content:'';
						display:inline-block;
						height:20px;
						width:29px;
						vertical-align:middle;
						margin-right:5px;
						background:url(../images/m-sprite.png) 0px -44px no-repeat;
					}
				}
			}
			&.end .select-content:before {
				height:21px;
				background-position:0px -65px;
			}
			&.persons .select-content {
				line-height:normal;
				&:before {
					height:23px;
					background-position:0px -87px;
				}
			}
			&.btn-primary {
				display:block;
				margin:0px -15px;
				color:#fff;
				font-size:32px;
				font-family: 'League Gothic';
				text-transform:uppercase;
				text-align:center;
				box-sizing:border-box;
				background-color:#094798;
			}
			span {
				display:block;
				line-height:normal;
				color:#094798;
				&.select-title {
					font-size:11px;
				}
				&.select-content {
					line-height:31px;
					font-size:20px;
					font-family: 'League Gothic';
				}
			}
		}
	}
}
.slider-wrapper {
	position:relative;
	.slider {
		li {
			display:none;
			position:relative;
			width:100%;
			&.active {
				display:block;
			}
			img {
				width:100%;
				vertical-align: top;
			}
			.slide-info {
				position: absolute;
				width: 100%;
				bottom:15px;
				z-index: 1;
				h2 {
					margin:0px;
					padding-left:15px;
					color:#fff;
					font-size:35px;
					font-family: 'Open Sans Condensed', sans-serif;
					text-transform:uppercase;
				}
				p {
					padding-left:13px;
					color:#ffb900;
					font-size:16px;
					font-family: 'Open Sans', sans-serif;
					font-weight:bold;
				}
			}
		}
	}
	.bullets {
		position:absolute;
		right: 14px;
		bottom: 11px;
		li {
			position:relative;
			float:left;
			width:7px;
			height:7px;
			margin:0px 5px;
			border-radius:50%;
			background-color:#fff;
			cursor:pointer;
			&.active {
				width:13px;
				height:13px;
				top: -2.5px;
				background-color:#ffb900;
			}
		}
	}	
}

@media only screen and (max-device-width : 319px) {
	[class^=col-] {
		padding:0px 5px;
	}
	.menu li a {
		&.btn-primary {
			margin:0px -5px;
			font-size:28px;
		}
		span {
			&.select-title {
				font-size:10px;
			}
			&.select-content {
				font-size:16px;
			}
		}
	}
	.slider-wrapper .slider li .slide-info h2,
	.slider-wrapper .slider li .slide-info p {
		padding-left:5px;
	}
	.slider-wrapper .slider li .slide-info p {
		font-size:14px;
	}
}

@media only screen and (min-device-width : 720px) {
	[class^=col-] {
		padding:0px 20px;
	}
	.menu li a {
		&.btn-primary {
			margin:0px -20px;
			font-size:38px;
		}
		span {
			&.select-title {
				font-size:14px;
			}
			&.select-content {
				font-size:24px;
			}
		}
	}
	.slider-wrapper .slider li .slide-info h2,
	.slider-wrapper .slider li .slide-info p {
		padding-left:20px;
	}
	.slider-wrapper .slider li .slide-info p {
		font-size:20px;
	}
	.slider-wrapper .bullets li {
		width:10px;
		height:10px;
		&.active {
			width:16px;
			height:16px;
			top: -3px;
		}
	}	
}

@media only screen and (min-device-width : 1280px) {
	[class^=col-] {
		padding:0px 20px;
		height:60px;
		line-height:58px;
	}
	.menu li a {
		&.btn-primary {
			margin:0px -20px;
			font-size:42px;
		}
		span {
			&.select-title {
				font-size:16px;
			}
			&.select-content {
				font-size:26px;
			}
		}
	}
	.slider-wrapper .slider li .slide-info h2,
	.slider-wrapper .slider li .slide-info p {
		padding-left:20px;
	}
	.slider-wrapper .slider li .slide-info p {
		font-size:22px;
	}
	.slider-wrapper .bullets li {
		width:16px;
		height:16px;
		margin:0px 10px;
		&.active {
			width:22px;
			height:22px;
			top: -3px;
		}
	}	
}
